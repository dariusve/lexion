{
  "name": "lexion",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "build": "pnpm -r --filter './packages/*' --filter './apps/*' build",
    "build:packages": "pnpm -r --filter './packages/*' build",
    "build:apps": "pnpm -r --filter './apps/*' build",
    "lint": "pnpm -r lint",
    "dev:vue-sample": "pnpm --filter @lexion/vue-sample dev"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3"
  }
}
