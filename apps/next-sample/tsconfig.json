{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["ES2022", "DOM"],
    "jsx": "preserve",
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "Bundler",
    "types": ["node"],
    "paths": {
      "@lexion-rte/core": ["../../packages/core/src/index.ts"],
      "@lexion-rte/extensions": ["../../packages/extensions/src/index.ts"],
      "@lexion-rte/react": ["../../packages/react/src/index.ts"],
      "@lexion-rte/next": ["../../packages/next/src/index.ts"]
    },
    "plugins": [{ "name": "next" }]
  },
  "include": ["next-env.d.ts", "app/**/*.ts", "app/**/*.tsx"],
  "exclude": ["node_modules"]
}
